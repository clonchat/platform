{
  "info": {
    "name": "Clonchat API",
    "description": "Colección de endpoints para la API de Clonchat",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      },
      "response": []
    },
    {
      "name": "Chat - General",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"message\": \"Hola, ¿qué es Clonchat?\",\n  \"conversationHistory\": []\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/chat/general",
          "host": ["{{baseUrl}}"],
          "path": ["chat", "general"]
        }
      },
      "response": []
    },
    {
      "name": "Chat - General (con historial)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"message\": \"¿Cuánto cuesta?\",\n  \"conversationHistory\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"Hola, ¿qué es Clonchat?\"\n    },\n    {\n      \"role\": \"assistant\",\n      \"content\": \"Clonchat es una plataforma que te permite crear chatbots personalizados para tu negocio...\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/chat/general",
          "host": ["{{baseUrl}}"],
          "path": ["chat", "general"]
        }
      },
      "response": []
    },
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"Test User\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "register"]
        }
      },
      "response": []
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      },
      "response": []
    },
    {
      "name": "Business - Get All",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer YOUR_TOKEN_HERE"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/businesses",
          "host": ["{{baseUrl}}"],
          "path": ["businesses"]
        }
      },
      "response": []
    },
    {
      "name": "Business - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer YOUR_TOKEN_HERE"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Mi Negocio\",\n  \"description\": \"Descripción del negocio\",\n  \"subdomain\": \"mi-negocio\",\n  \"category\": \"restaurant\",\n  \"contactInfo\": {\n    \"email\": \"contacto@minegocio.com\",\n    \"phone\": \"+1234567890\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/businesses",
          "host": ["{{baseUrl}}"],
          "path": ["businesses"]
        }
      },
      "response": []
    },
    {
      "name": "Business - Get by Subdomain",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/businesses/subdomain/mi-negocio",
          "host": ["{{baseUrl}}"],
          "path": ["businesses", "subdomain", "mi-negocio"]
        }
      },
      "response": []
    },
    {
      "name": "Appointments - Get by Business",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer YOUR_TOKEN_HERE"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/appointments/1",
          "host": ["{{baseUrl}}"],
          "path": ["appointments", "1"]
        }
      },
      "response": []
    },
    {
      "name": "Appointments - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"businessId\": 1,\n  \"customerName\": \"Juan Pérez\",\n  \"customerEmail\": \"juan@example.com\",\n  \"customerPhone\": \"+1234567890\",\n  \"appointmentDate\": \"2024-01-15T10:00:00Z\",\n  \"serviceType\": \"consulta\",\n  \"notes\": \"Primera consulta\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/appointments",
          "host": ["{{baseUrl}}"],
          "path": ["appointments"]
        }
      },
      "response": []
    },
    {
      "name": "Chat - Business Specific",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"sessionId\": \"session-123\",\n  \"message\": \"Quiero agendar una cita\",\n  \"conversationHistory\": []\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/chat/1/message",
          "host": ["{{baseUrl}}"],
          "path": ["chat", "1", "message"]
        }
      },
      "response": []
    }
  ]
}
